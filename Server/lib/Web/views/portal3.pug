extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 400px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div#menu-bar(style='float: right; margin-top: 25px;')
			a(target='_blank', href='//cafe.naver.com/sdbx', style='background-color: #63A95B;')= L('sandbox')
			a(target='_blank', href='//blog.jjo.kr/', style='background-color: #4078DC;')= L('CREATOR')
		div.leftmenu(style='float: left; padding-left: -300px;')
		a(href='/?server=0')
			img#discord(src='/img/kkutu/shop/discord.png', width="200px")
		br
		a(href='https://cafe.naver.com/godtus', target='_blank')
			img#discord(src='/img/kkutu/shop/discord2.png', width="200px")
		a(href='https://discordapp.com/invite/Ykp2qCF', target='_blank')
			img#discord(src='/img/kkutu/ko_KR/donate.png', width="150px")
		a(href='https://discordapp.com/invite/Ykp2qCF', target='_blank')
			img#discord(src='/img/kkutu/ko_KR/kakao.png', width="150px")
		h3.server-list-title
			a#server-refresh
				+FA('refresh')
				+Expl(L('serverRefresh'))
			label= L('serverList')
			label#server-total(style='color: #AAA; font-size: 13px;')
		div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')